package br.com.treinaweb.twprojetos.controles;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import br.com.treinaweb.twprojetos.entidades.consulta;
import br.com.treinaweb.twprojetos.repositorios.ConsultaRepositorio;

@Controller
@RequestMapping("/consultas")
public class ConsultaControle {
	
	@Autowired
	private  ConsultaRepositorio consultaRepositorio;
	
	@GetMapping
	public ModelAndView home () {
		ModelAndView modelAndView = new ModelAndView("consulta/home");
		
		modelAndView.addObject("consultas", consultaRepositorio.findAll());
		
		return modelAndView;
	}
	
	@GetMapping("/{id}")
	public ModelAndView detalhes(@PathVariable Long id) {
		ModelAndView modelAndView = new ModelAndView("consulta/detalhes");
		
		modelAndView.addObject("consulta", consultaRepositorio.getOne(id));
		
		return modelAndView;
	}
	
	@GetMapping("/cadastrar")
	public ModelAndView cadastrar() {
		ModelAndView modelAndView = new ModelAndView("consulta/formulario");
		modelAndView.addObject("consulta", new Consulta());
		return modelAndView;
	}
	
	@PostMapping({"/cadastrar", "/{id}/editar"})
	public String salvar(consulta consulta) {
		consultaRepositorio.save(consulta);
		
		return "redirect:/consultas";
	}
	
	@GetMapping("/{id}/editar")
	public ModelAndView editar(@PathVariable Long id) {
		ModelAndView modelAndView = new ModelAndView("/consulta/formulario");
		modelAndView.addObject("consulta", consultaRepositorio.getOne(id));		
		return modelAndView;
	}
	
	
	@GetMapping("{id}/excluir")
	public String excluir(@PathVariable Long id) {
		consultaRepositorio.deleteById(id);		
		return "redirect:/consultas";
	}
	
	
}
